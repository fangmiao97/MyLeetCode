class Solution {
    public String intToRoman(int num) {
        
        StringBuilder res = new StringBuilder();
        
        while(num > 0) {
            
            if(num >= 1000) {
                res.append('M');
                num -= 1000;
            }
            if(num >= 900 && num < 1000) {
                res.append('C');
                res.append('M');
                num -= 900;
            }
            if(num >= 500 && num < 900) {
                res.append('D');
                num -= 500;
            }
            if(num >= 400 && num <500) {
                res.append('C');
                res.append('D');
                num -= 400;
            }
            if(num >= 100 && num < 400) {
                res.append('C');
                num -= 100;
            }
            if(num >= 90 && num < 100) {
                res.append('X');
                res.append('C');
                num -= 90;
            } 
            if(num >= 50 && num < 90) {
                res.append('L');
                num -= 50;
            }
            if(num >= 40 && num < 50) {
                res.append('X');
                res.append('L');
                num -= 40;
            }
            if(num >= 10 && num < 40) {
                res.append('X');
                num -= 10;
            }
            if(num == 9) {
                res.append('I');
                res.append('X');
                num -= 9;
            } 
            if(num >= 5 && num < 9) {
                res.append('V');
                num -= 5;
            }
            if(num == 4) {
                res.append('I');
                res.append('V');
                num -= 4;
            }
            if(num >= 1 && num < 4){
                res.append('I');
                num -= 1;
            }
        }
        
        return res.toString();
    }
}
