class Solution {
    public List<Integer> addToArrayForm(int[] A, int K) {
        List<Integer> result = new ArrayList<Integer>(A.length + 1);
        for (int i = A.length - 1, carry = 0; i >= 0 || K > 0 || carry > 0; i--, K /= 10) {
        int d1 = i >= 0 ? A[i] : 0;
        int d2 = K % 10;
        int sum = d1 + d2 + carry;

        result.add(0,sum % 10);
        carry = sum / 10;
    }
    //Collections.reverse(result);
    return result;
    }
}
